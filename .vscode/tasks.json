{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "command": "clean.sh",
            "windows": {
                "command": "clean.bat"
            },
            "options": {
                "cwd": "${workspaceRoot}/armgcc"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Make Debug Firmware",
            "type": "shell",
            "command": "build_debug.sh",
            "windows": {
                "command": "build_debug.bat"
            },
            "options": {
                "cwd": "${workspaceRoot}/armgcc"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Make Release Firmware",
            "type": "shell",
            "command": "build_release.sh",
            "windows": {
                "command": "build_release.bat"
            },
            "options": {
                "cwd": "${workspaceRoot}/armgcc"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Load Debug Firmware",
            "type": "shell",
            "command": "openocd -f interface/stlink.cfg -f target/klx.cfg -c \"program fs-i6.elf verify reset exit\"",
            "options": {
                "cwd": "${workspaceRoot}/armgcc/debug"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Load Release Firmware",
            "type": "shell",
            "command": "openocd -f interface/stlink.cfg -f target/klx.cfg -c \"program fs-i6.elf verify reset exit\"",
            "options": {
                "cwd": "${workspaceRoot}/armgcc/release"
            },
            "group": "build",
            "problemMatcher": []
        }
    ]
}
